<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.domain.order.mapper.OrderMapper">

    <select id="selectOrderById" resultType="com.example.demo.domain.order.dto.OrderDTO">
        SELECT order_id AS orderId, customer_name AS customerName
        FROM orders
        WHERE order_id = #{orderId}
    </select>
</mapper>
